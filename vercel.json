{
  "rewrites": [{ 
    "source": "/(.*)", 
    "destination": "/index.html" 
  }],
  "github": {
    "enabled": true,
    "silent": true
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "installCommand": "pnpm install",
        "buildCommand": "pnpm run build"
      }
    }
  ]
}